@model GuildCars.ViewModels.InventoryReportVM
@{
    ViewBag.Title = "Inventory";
}

<h2>Inventory Report</h2>

<div class="row">
    <div class="row">
        <h2>New Vehicles</h2>
    </div>
    <div class="row">
        <table class="table-striped col-md-6">
            <thead>
                <tr>
                    <th>Year</th>
                    <th>Make</th>
                    <th>Model</th>
                    <th>Count</th>
                    <th>Stock Value</th>
                </tr>
            </thead>
            @foreach (var item in Model.NewInventory)
            {
                <tr>
                    <td>@item.Year</td>
                    <td>@item.Make</td>
                    <td>@item.Model</td>
                    <td>@item.Count</td>
                    <td>@item.StockValue</td>
                </tr>
            }
        </table>
    </div>
</div>
<div class="row">
    <div class="row">
        <h2>Used Vehicles</h2>
    </div>
    <div class="row">
        <table class="table-striped col-md-6">
            <thead>
                <tr>
                    <th>Year</th>
                    <th>Make</th>
                    <th>Model</th>
                    <th>Count</th>
                    <th>Stock Value</th>
                </tr>
            </thead>
            @foreach (var item in Model.UsedInventory)
            {
                <tr>
                    <td>@item.Year</td>
                    <td>@item.Make</td>
                    <td>@item.Model</td>
                    <td>@item.Count</td>
                    <td>@item.StockValue</td>
                </tr>
            }
        </table>
    </div>
</div>