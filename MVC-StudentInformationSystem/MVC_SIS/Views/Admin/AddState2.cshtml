@model Exercises.Models.ViewModels.StateVM

@{
    ViewBag.Title = "AddState";
}


<div class="row">
    <div class="col-xs-12">
        <h3>Add State</h3>
        @Html.ActionLink("Return to List", "States", "Admin")
    </div>
</div>
<div class="row">
    <div class="col-xs-12">
        @using (Html.BeginForm())
        {
        <div class="form-group">
            <label>State:</label>
            @Html.DropDownListFor(
           m => m.State.StateAbbreviation,
           Model.AvailableStateItems.Select(i => new SelectListItem { Text = i.Text+" ("+i.Value+")", Value = i.Value }))
            <span class="text-danger">@Html.ValidationMessageFor(m => m.State.StateAbbreviation)</span>

        </div>
            <button type="submit" class="btn btn-sm btn-primary">Save</button>
        }
    </div>
</div>
