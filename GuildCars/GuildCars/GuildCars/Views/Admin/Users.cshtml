@model IEnumerable<GuildCars.Models.User>
@{
    ViewBag.Title = "Users";
}
<div>
    <br />
    <br />
    <a href="~/Admin/AddUser" class="btn-lg btn-primary">Add a new User</a>
</div>
<div class="row">
    <div class="row">
        <h2>Users</h2>
    </div>
    <div class="row">
        <table class="table-striped col-md-12">
            <thead>
                <tr>
                    <th>UserId</th>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Role</th>
                    <th>Email</th>
                    <th></th>
                </tr>
            </thead>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.UserId</td>
                    <td>@item.FirstName</td>
                    <td>@item.LastName</td>
                    <td>@item.Role</td>
                    <td>@item.Email</td>
                    <td>@Html.ActionLink("Edit", "EditUser", "Admin", new { id = item.UserId }, new { @class = "btn btn-success" })</td>
                </tr>
            }
        </table>
    </div>
</div>