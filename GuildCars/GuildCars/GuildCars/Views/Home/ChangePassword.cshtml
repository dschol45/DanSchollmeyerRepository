@model GuildCars.ViewModels.UserVM
@{
    ViewBag.Title = "ChangePassword";
}
<div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-8">
        @using (Html.BeginForm("ChangePassword", "Home", FormMethod.Post))
        {
            @Html.HiddenFor(m => m.UserId)
            @Html.HiddenFor(m => m.FirstName)
            @Html.HiddenFor(m => m.LastName)
            @Html.HiddenFor(m => m.Role)
            @Html.HiddenFor(m => m.Email)
            @Html.ValidationSummary()
            <div class="col-md-12">
                <div class="panel panel-primary">
                    <div class="panel-heading">
                        <h2 class="panel-title">Change Password</h2>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <label>Password</label>
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control", required = "required" })
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <label>Confirm Password</label>
                            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", required = "required" })
                        </div>
                    </div>
                    <br />
                    <div class="row col-md-3">
                        <button class="btn btn-success" id="saveButton">Save</button>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

