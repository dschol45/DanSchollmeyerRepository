@model GuildCars.ViewModels.HomeIndexVM
@{
    ViewBag.Title = "Home Page";
}
<div class="container">
    <div id="myCarousel" class="carousel slide" data-ride="carousel">

        <!-- Wrapper for slides -->
        <div class="carousel-inner" style="height:300px;">
            <div class="item jumbotron active text-center">
                <a href="~/Home/Specials" style="text-decoration:none; color:black;">
                    <div style="height:300px;">
                        <div class="col-md-2"></div>
                        <div class="col-md-8">
                            <h1>Specials!!!</h1>
                            <p>Welcome to Guild Cars, the Best Online Car Dealership!</p>
                        </div>
                    </div>
                </a>
            </div>
            @foreach (var special in Model.Specials)
            {
                <div class="item  jumbotron text-center">
                    <a href="~/Home/Specials" style="text-decoration:none; color:black">
                        <div style="height:300px;">
                            <div class="col-md-2"></div>
                            <div class="col-md-8">
                                <p>@special.SpecialTitle</p>
                                <p>@special.SpecialNote</p>
                            </div>
                        </div>
                    </a>
                </div>
            }
        </div>

        <!-- Left and right controls -->
        <a class="left carousel-control" href="#myCarousel" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
    </a>
</div>
<div>
    <h2>Featured Vehicles</h2>
    @foreach (var vehicle in Model.Vehicles)
    {
        <div id="featuredCar" class="col-md-3" style="border:solid; margin-bottom:50px;">
            <a href=@Url.Action("Details","Inventory", new { id = vehicle.VehicleId },null)>
                <div>
                    <br />
                    <p>
                        <img src="@Url.Content("~/Images/inventory-"+vehicle.VehicleId+".png")" height="150" width="100%" />
                    </p>
                    <p class="text-center">@vehicle.Year  @vehicle.Make.MakeName  @vehicle.Model.ModelName</p>
                    <p class="text-center">@vehicle.SalePrice</p>
                </div>
            </a>
        </div>
        <div class="col-md-1" style="margin-bottom:50px;"></div>
    }
</div>